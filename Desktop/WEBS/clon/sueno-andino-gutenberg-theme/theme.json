            "content": "<!-- wp:group {\"className\":\"hero-section\",\"align\":\"full\"} -->\n<div class=\"wp-block-group hero-section\"><!-- wp:group {\"className\":\"hero-content\"} -->\n<div class=\"wp-block-group hero-content\"><!-- wp:heading {\"level\":1,\"className\":\"hero-title\"} -->\n<h1 class=\"hero-title\">Transformando Comunidades Sostenibles</h1>\n<!-- /wp:heading -->\n\n<!-- wp:paragraph {\"className\":\"hero-description\"} -->\n<p class=\"hero-description\">Desarrollamos soluciones integrales para el crecimiento territorial sostenible, conectando comunidades con oportunidades de desarrollo.</p>\n<!-- /wp:paragraph -->\n\n<!-- wp:buttons {\"className\":\"hero-buttons\"} -->\n<div class=\"wp-block-buttons hero-buttons\"><!-- wp:button {\"className\":\"is-style-primary\"} -->\n<div class=\"wp-block-button is-style-primary\"><a class=\"wp-block-button__link\">Conoce Nuestros Servicios</a></div>\n<!-- /wp:button -->\n\n<!-- wp:button {\"className\":\"is-style-secondary\"} -->\n<div class=\"wp-block-button is-style-secondary\"><a class=\"wp-block-button__link\">Descarga Guía Gratuita</a></div>\n<!-- /wp:button --></div>\n<!-- /wp:buttons -->\n\n<!-- wp:group {\"className\":\"hero-stats\"} -->\n<div class=\"wp-block-group hero-stats\"><!-- wp:group {\"className\":\"stat-item\"} -->\n<div class=\"wp-block-group stat-item\"><!-- wp:heading {\"level\":3,\"className\":\"stat-number\"} -->\n<h3 class=\"stat-number\">50+</h3>\n<!-- /wp:heading -->\n\n<!-- wp:paragraph {\"className\":\"stat-label\"} -->\n<p class=\"stat-label\">Proyectos Completados</p>\n<!-- /wp:paragraph --></div>\n<!-- /wp:group -->\n\n<!-- wp:group {\"className\":\"stat-item\"} -->\n<div class=\"wp-block-group stat-item\"><!-- wp:heading {\"level\":3,\"className\":\"stat-number\"} -->\n<h3 class=\"stat-number\">15</h3>\n<!-- /wp:heading -->\n\n<!-- wp:paragraph {\"className\":\"stat-label\"} -->\n<p class=\"stat-label\">Años de Experiencia</p>\n<!-- /wp:paragraph --></div>\n<!-- /wp:group -->\n\n<!-- wp:group {\"className\":\"stat-item\"} -->\n<div class=\"wp-block-group stat-item\"><!-- wp:heading {\"level\":3,\"className\":\"stat-number\"} -->\n<h3 class=\"stat-number\">200+</h3>\n<!-- /wp:heading -->\n\n<!-- wp:paragraph {\"className\":\"stat-label\"} -->\n<p class=\"stat-label\">Comunidades Beneficiadas</p>\n<!-- /wp:paragraph --></div>\n<!-- /wp:group --></div>\n<!-- /wp:group --></div>\n<!-- /wp:group --></div>\n<!-- /wp:group -->"
