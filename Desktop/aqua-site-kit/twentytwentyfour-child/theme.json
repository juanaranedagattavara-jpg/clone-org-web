{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "title": "Twenty Twenty-Four Child",
  "description": "Child theme de Twenty Twenty-Four para Aqua Site Kit con sistema de tokens personalizado",
  "settings": {
    "appearanceTools": true,
    "useRootPaddingAwareAlignments": true,
    "layout": {
      "contentSize": "840px",
      "wideSize": "1200px"
    },
    "color": {
      "palette": [
        {
          "color": "#3b82f6",
          "name": "Brand 500",
          "slug": "brand-500"
